<?xml version="1.0" encoding="utf-8"?>
 <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    	 android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dip">
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:gravity="center"
        android:background="@color/whitetransparent">
         <!-- =========================1========== -->
    <LinearLayout 
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip"
        android:gravity="center_horizontal" android:orientation="horizontal" android:layout_marginBottom="18dip">
        
          <TextView 
	        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"
	        android:text="镜像呈现" android:textSize="16sp" android:textStyle="bold" android:layout_marginRight="10dip"/>
          
	    <CheckBox
	        android:id="@+id/id_play_effect_mirror_ckx" 
	        android:layout_width="@dimen/effect_ckx_width" android:layout_height="@dimen/effect_ckx_height"
	        android:background="@drawable/effect_chkbox_bg"  android:button="@null"
	        />
    </LinearLayout>
    
    
     <!-- =========================1========== -->
    <LinearLayout 
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal" android:orientation="horizontal" android:layout_marginBottom="18dip">
        
          <TextView 
	        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"
	        android:text="迷幻画面" android:textSize="16sp" android:textStyle="bold" android:layout_marginRight="10dip"/>
          
	    <CheckBox 
	        android:id="@+id/id_play_effect_psychedelic_ckx" 
	        android:layout_width="@dimen/effect_ckx_width" android:layout_height="@dimen/effect_ckx_height"
	        android:background="@drawable/effect_chkbox_bg"  android:button="@null"
	        />
    </LinearLayout>
     <!-- =========================1========== -->
    <LinearLayout 
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal" android:orientation="horizontal" android:layout_marginBottom="18dip">
        
          <TextView 
	        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"
	        android:text="波形滚动" android:textSize="16sp" android:textStyle="bold" android:layout_marginRight="10dip"/>
          
	    <CheckBox 
	        android:id="@+id/id_play_effect_wave_ckx" 
	        android:layout_width="@dimen/effect_ckx_width" android:layout_height="@dimen/effect_ckx_height"
	        android:background="@drawable/effect_chkbox_bg"  android:button="@null"
	        />
    </LinearLayout>
      <!-- =========================1========== -->
    <LinearLayout 
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal" android:orientation="horizontal" android:layout_marginBottom="18dip">
        
          <TextView 
	        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"
	        android:text="动态监测" android:textSize="16sp" android:textStyle="bold" android:layout_marginRight="10dip"/>
          
	    <CheckBox 
	        android:id="@+id/id_play_effect_motiondetect_ckx" 
	        android:layout_width="@dimen/effect_ckx_width" android:layout_height="@dimen/effect_ckx_height"
	        android:background="@drawable/effect_chkbox_bg"  android:button="@null"
	        />
    </LinearLayout>
    
    
     <!-- =========================1========== -->
    <LinearLayout 
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal" android:orientation="horizontal" android:layout_marginBottom="18dip">
        
          <TextView 
	        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"
	        android:text="复古画面" android:textSize="16sp" android:textStyle="bold" android:layout_marginRight="10dip"/>
          
	    <CheckBox 
	        android:id="@+id/id_play_effect_fugu_ckx" 
	        android:layout_width="@dimen/effect_ckx_width" android:layout_height="@dimen/effect_ckx_height"
	        android:background="@drawable/effect_chkbox_bg"  android:button="@null"
	        />
    </LinearLayout>
   
    
    
    <!-- =========================1========== -->
    <LinearLayout 
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal" android:orientation="horizontal" android:layout_marginBottom="18dip">
        
          <TextView 
	        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"
	        android:text="老电影" android:textSize="16sp" android:textStyle="bold" android:layout_marginRight="10dip"/>
          
	    <CheckBox 
	        android:id="@+id/id_play_effect_oldmovie_ckx" 
	        android:layout_width="@dimen/effect_ckx_width" android:layout_height="@dimen/effect_ckx_height"
	        android:background="@drawable/effect_chkbox_bg"  android:button="@null"
	        />
    </LinearLayout>
    
  
    
     <RelativeLayout 
	        android:id="@+id/id_play_effect_palette"   android:background="#ffefefef"
       	 android:layout_width="match_parent" android:layout_height="30dip" android:layout_marginBottom="18dip">
        
          <TextView android:layout_centerInParent="true"
	        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"
	        android:text="全能调色" android:textSize="16sp" android:textStyle="bold" />
          
          <TextView 
              android:layout_width="25dip" android:layout_height="25dip" android:layout_centerVertical="true"
              android:background="@drawable/arrow_right" android:layout_alignParentRight="true" android:layout_marginRight="5dip"/>
    </RelativeLayout>
        
	</LinearLayout>     
 </ScrollView>