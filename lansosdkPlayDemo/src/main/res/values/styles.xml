<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    	<style name="adjustItemLayoutStyle">
    	    <item name="android:layout_width">match_parent</item>
    	    <item name="android:layout_height">wrap_content</item>
    	    <item name="android:gravity">center_vertical</item>
    	    <item name="android:orientation">horizontal</item>
    	    <item name="android:layout_marginLeft">25dip</item>
    	    <item name="android:layout_marginRight">25dip</item>
    	    <item name="android:layout_marginBottom">10dip</item>
    	            
    	</style>
    
      <style name="adjustItemTextStyle">
      	  <item name="android:layout_width">wrap_content</item>
	      <item name="android:layout_height">wrap_content</item>
      	  <item name="android:textColor">@color/white</item>
      	  <item name="android:textSize">16sp</item>
      	  <item name="android:textStyle">bold</item>
      	  <item name="android:layout_marginRight">10dip</item>
    </style>
    
      <style name="adjustItemSeekbarStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:maxHeight">@dimen/seekbar_height</item>
            <item name="android:minHeight">@dimen/seekbar_height</item>
            <item name="android:paddingLeft">@dimen/time_margin_sides</item>
            <item name="android:paddingRight">@dimen/time_margin_sides</item>
            <item name="android:paddingTop">4dp</item>
            <item name="android:paddingBottom">4dp</item>
            <item name="android:progressDrawable">@drawable/po_seekbar</item>
            <item name="android:thumb">@drawable/seekbar_thumb</item>
            <item name="android:focusable">true</item>
      </style>
      
</resources>
